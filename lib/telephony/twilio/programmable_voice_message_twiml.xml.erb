<?xml version="1.0" encoding="utf-8" ?>
<Response>
  <Say language="<%= locale %>">
    <%= message_body %>
  </Say>
  <% if repeat_url %>
    <Gather action="<%= repeat_url %>" numDigits="1">
      <Say language="<%= locale %>">
        <%= I18n.t('twilio.programmable_voice.repeat_message', locale: locale) %>
      </Say>
    </Gather>
  <% end %>
  <Hangup />
</Response>
